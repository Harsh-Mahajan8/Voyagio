<% layout('/layouts/boilerPlate') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4 border rounded-4 p-4 bg-white shadow-sm">
      <h2 class="text-danger pb-3 text-center">Login</h2>
      <form
        action="/login"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-control"
            required
            autocomplete="username"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            required
            autocomplete="current-password"
          />
        </div>
        <button class="btn btn-danger w-100 mt-2" type="submit">Log In</button>
        <hr />
      </form>
      <div class="text-center mt-2">
        <span class="text-muted">or</span>
      </div>
      <div class="text-center mt-2">
        <a href="/signup" class="text-decoration-none text-black">Create a new Account</a>
      </div>
    </div>
  </div>
</div>
