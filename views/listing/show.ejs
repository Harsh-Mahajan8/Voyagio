<% layout('/layouts/boilerPLate.ejs') %>

<div class="show offset-3 col-7">
  <div class="row d-flex justify-content-between ms-3">
    <div class="col-10">
      <h4 class="card-title"><%= listing.title %></h4>
    </div>
    <a href="/listings" class="col-2">
      <button type="button" class="btn btn-danger">
        <i class="fa-solid fa-arrow-left" style="color: #ffffff"></i>
      </button>
    </a>
  </div>

  <div class="card col-8 ms-4">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img col-6"
      alt="<%= listing.image.filename %>"
    />
    <div class="card-body p-0 pt-2">
      <p class="card-text">
        <%= listing.description %> <br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %>/night<br />
        <%= listing.location %>, <%= listing.country %>
      </p>
      <div class="row">
        <form
          action="/listings/<%= listing._id %>/edit"
          method="get"
          class="col-1"
        >
          <button class="btn btn-danger mr-3">Edit</button>
        </form>
        <form
          action="/listings/<%= listing._id %>?_method=DELETE"
          method="post"
          class="col-1 mx-5"
        >
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    </div>
  </div>
  <hr />

  <div class="review col-8 offset-1">
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/review" method="post" class="ms-3 needs-validation" novalidate>
      <div class="rating mb-2 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" class="form-range"  name="review[rating]" id="rating" min="1" max="5" />
      </div>
      <div class="comment mb-3 ">
        <label for="comment" class="form-label">Comment</label>
        <textarea class="form-control" name="review[comment]" id="comment" cols="15" rows="3" required></textarea>
          <div class="invalid-feedback">
            Please provide a valid comment.
          </div>
        </div>
        <button class="btn btn-outline-danger mb-5  " >
          Submit
        </button>
    </form>
  </div>
</div>
