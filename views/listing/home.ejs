<% layout('/layouts/boilerPLate.ejs') %>
<div class="row justify-content-center">
  <h2 class="text-danger offset-1 my-0">All Listings:</h2>
  <% for(let listing of listings){ %>
  <div class="card col-4 m-2 mb-3 p-0 hover my-4" style="width: 20rem">
    <a href="/listings/<%= listing._id %>" class="text-decoration-none">
      <img src= <%= listing.image.url  %> class="card-img-top card-img" 
      alt= '<%= listing.image.filename %>' />
      <div class="card-body text-black p-0 pt-2 mx-1">
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text m-0 p-0">
          &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
        </p>
      </div>
    </a>
  </div>

  <% } %>
</div>
